{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "type": "object",
      "description": "Represents a user's public profile.",
      "properties": {
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "lastLogin": {
            "type": "string",
            "format": "date-time"
        }
      }
    },
    "Category": {
      "title": "Category",
      "type": "object",
      "description": "Represents a product category.",
      "properties": {
        "nameKey": {
          "type": "string",
          "description": "The key for the category name (for i18n)."
        },
        "imageUrl": {
          "type": "string",
          "format": "uri"
        },
        "imageHint": {
          "type": "string"
        }
      },
      "required": [
        "nameKey",
        "imageUrl"
      ]
    },
    "SubCategory": {
      "title": "Sub-Category",
      "type": "object",
      "description": "Represents a product sub-category.",
      "properties": {
        "nameKey": {
          "type": "string"
        },
        "parentCategory": {
          "type": "string"
        }
      },
      "required": [
        "nameKey",
        "parentCategory"
      ]
    },
    "Product": {
      "title": "Product",
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "slug": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "longDescription": {
          "type": "string"
        },
        "images": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          }
        },
        "imageHints": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "price": {
          "type": "number"
        },
        "category": {
          "type": "string"
        },
        "subCategory": {
          "type": "string"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "variants": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "color": {
                "type": "string"
              },
              "colorName": {
                "type": "string"
              },
              "size": {
                "type": "string"
              },
              "stock": {
                "type": "number"
              },
              "imageUrl": {
                "type": "string",
                "format": "uri"
              }
            },
            "required": [
              "id",
              "color",
              "colorName",
              "size",
              "stock"
            ]
          }
        },
        "rating": {
          "type": "number"
        },
        "reviewCount": {
          "type": "number"
        },
        "status": {
          "type": "string",
          "enum": [
            "draft",
            "published",
            "archived"
          ]
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "name",
        "slug",
        "price",
        "category",
        "subCategory",
        "status",
        "variants"
      ]
    },
    "Order": {
      "title": "Order",
      "type": "object",
      "properties": {
        "customer": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "email": {
              "type": "string",
              "format": "email"
            }
          },
          "required": [
            "name",
            "email"
          ]
        },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "productId": {
                "type": "string"
              },
              "variantId": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "quantity": {
                "type": "number"
              },
              "price": {
                "type": "number"
              }
            },
            "required": [
              "productId",
              "variantId",
              "name",
              "quantity",
              "price"
            ]
          }
        },
        "total": {
          "type": "number"
        },
        "status": {
          "type": "string",
          "enum": [
            "pending",
            "processing",
            "shipped",
            "delivered",
            "cancelled"
          ]
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "customer",
        "items",
        "total",
        "status",
        "createdAt"
      ]
    },
    "StoreSettings": {
      "title": "Store Settings",
      "type": "object",
      "properties": {
        "storeName": {
          "type": "string"
        },
        "contactEmail": {
          "type": "string",
          "format": "email"
        },
        "defaultCurrency": {
          "type": "string"
        },
        "defaultLanguage": {
          "type": "string"
        }
      },
      "required": [
        "storeName",
        "contactEmail",
        "defaultCurrency",
        "defaultLanguage"
      ]
    }
  },
  "auth": {
    "providers": [
      "google.com"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores user profiles. Only admins can read all profiles. Users can read their own."
    },
    "/products/{productId}": {
      "schema": {
        "$ref": "#/entities/Product"
      },
      "description": "Stores all product information. Publicly readable."
    },
    "/categories/{categoryId}": {
      "schema": {
        "$ref": "#/entities/Category"
      },
      "description": "Stores product categories. Publicly readable."
    },
    "/subcategories/{subcategoryId}": {
      "schema": {
        "$ref": "#/entities/SubCategory"
      },
      "description": "Stores product sub-categories. Publicly readable."
    },
    "/orders/{orderId}": {
      "schema": {
        "$ref": "#/entities/Order"
      },
      "description": "Stores customer orders. Should only be readable by admins."
    },
    "/settings/{settingId}": {
      "schema": {
        "$ref": "#/entities/StoreSettings"
      },
      "description": "Stores global settings for the store. Should only be writable by admins."
    }
  }
}