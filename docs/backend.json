{
  "entities": {
    "Product": {
      "title": "Product",
      "description": "An item available for sale in the store.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "slug": { "type": "string" },
        "description": { "type": "string" },
        "longDescription": { "type": "string" },
        "price": { "type": "number" },
        "status": { "type": "string", "enum": ["draft", "published", "archived"] },
        "category": { "type": "string" },
        "subCategory": { "type": "string", "description": "Reference to the sub-category ID." },
        "images": { "type": "array", "items": { "type": "string" } },
        "imageHints": { "type": "array", "items": { "type": "string" } },
        "rating": { "type": "number" },
        "reviewCount": { "type": "number" },
        "tags": { "type": "array", "items": { "type": "string" } },
        "variants": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "size": { "type": "string" },
              "color": { "type": "string" },
              "colorName": { "type": "string" },
              "stock": { "type": "number" },
              "imageUrl": { "type": "string" }
            },
            "required": ["id", "size", "color", "colorName", "stock"]
          }
        },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["name", "slug", "price", "category", "subCategory", "status", "createdAt", "updatedAt"]
    },
    "Category": {
      "title": "Category",
      "description": "A category for organizing products.",
      "type": "object",
      "properties": {
        "nameKey": { "type": "string" },
        "imageHint": { "type": "string" },
        "imageUrl": { "type": "string" }
      },
      "required": ["nameKey", "imageUrl"]
    },
    "SubCategory": {
      "title": "Sub-Category",
      "description": "A sub-category for organizing products, belonging to a parent category.",
      "type": "object",
      "properties": {
        "nameKey": { "type": "string" },
        "parentCategory": { "type": "string", "description": "The ID of the parent category." }
      },
      "required": ["nameKey", "parentCategory"]
    },
    "Order": {
        "title": "Order",
        "description": "A customer order.",
        "type": "object",
        "properties": {
            "customer": {
                "type": "object",
                "properties": {
                    "name": { "type": "string" },
                    "email": { "type": "string" },
                    "phone": { "type": "string" },
                    "address": { "$ref": "#/entities/Address" }
                },
                "required": ["name", "email"]
            },
            "items": {
                "type": "array",
                "items": { "$ref": "#/entities/OrderItem" }
            },
            "total": { "type": "number" },
            "status": { "type": "string", "enum": ["pending", "processing", "shipped", "delivered", "cancelled"] },
            "createdAt": { "type": "string", "format": "date-time" }
        },
        "required": ["customer", "items", "total", "status", "createdAt"]
    },
    "OrderItem": {
        "title": "Order Item",
        "description": "An item within an order.",
        "type": "object",
        "properties": {
            "productId": { "type": "string" },
            "variantId": { "type": "string" },
            "name": { "type": "string" },
            "quantity": { "type": "number" },
            "price": { "type": "number" }
        },
        "required": ["productId", "variantId", "name", "quantity", "price"]
    },
    "Address": {
        "title": "Address",
        "description": "A shipping or billing address.",
        "type": "object",
        "properties": {
            "street": { "type": "string" },
            "city": { "type": "string" },
            "country": { "type": "string" }
        },
        "required": ["street", "city", "country"]
    },
    "StoreSettings": {
      "title": "Store Settings",
      "description": "General settings for the e-commerce store.",
      "type": "object",
      "properties": {
        "storeName": { "type": "string" },
        "contactEmail": { "type": "string", "format": "email" },
        "defaultCurrency": { "type": "string", "enum": ["USD", "EUR", "HTG"] },
        "defaultLanguage": { "type": "string", "enum": ["en", "fr", "ht"] }
      },
      "required": ["storeName", "contactEmail", "defaultCurrency", "defaultLanguage"]
    }
  },
  "auth": {
    "providers": ["anonymous"]
  },
  "firestore": {
    "/products/{productId}": {
      "schema": { "$ref": "#/entities/Product" },
      "description": "Stores individual product documents."
    },
    "/categories/{categoryId}": {
      "schema": { "$ref": "#/entities/Category" },
      "description": "Stores product category documents."
    },
    "/subcategories/{subCategoryId}": {
      "schema": { "$ref": "#/entities/SubCategory" },
      "description": "Stores product sub-category documents."
    },
    "/orders/{orderId}": {
      "schema": { "$ref": "#/entities/Order" },
      "description": "Stores customer order documents."
    },
    "/settings/storeConfig": {
        "schema": { "$ref": "#/entities/StoreSettings" },
        "description": "Stores the single configuration document for the store."
    }
  }
}
