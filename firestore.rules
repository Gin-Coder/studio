rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Products can be read by anyone, but only changed by logged-in users.
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    // Categories can be read by anyone, but only changed by logged-in users.
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
