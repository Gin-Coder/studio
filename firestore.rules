rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ========================
    // Fonctions
    // ========================
    function isAuthenticated() {
      return request.auth != null;
    }

    function isAdmin() {
      return isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin";
    }

    // ========================
    // USERS (dashboard admin)
    // ========================
    match /users/{userId} {
      // Admin : lister tous les users
      allow list: if isAdmin();
      // Lire : admin ou soi-même
      allow get: if isAdmin() || request.auth.uid == userId;
      // Créer son propre profil
      allow create: if request.auth.uid == userId;
      // Modifier : admin ou soi-même
      allow update: if isAdmin() || request.auth.uid == userId;
      // Supprimer : admin uniquement
      allow delete: if isAdmin();
    }

    // ========================
    // PRODUCTS
    // ========================
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // ========================
    // CATEGORIES
    // ========================
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /subcategories/{subcategoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // ========================
    // STORE SETTINGS
    // ========================
    match /settings/storeConfig {
      allow read: if true;
      allow write: if isAdmin();
    }

    // ========================
    // ORDERS
    // ========================
    match /orders/{orderId} {
      // Client : lire ses commandes
      allow get: if isAuthenticated() && request.auth.uid == resource.data.userId;
      // Admin : tout voir
      allow list, get: if isAdmin();
      // Créer une commande
      allow create: if isAuthenticated();
      // Modifier / supprimer : admin
      allow update, delete: if isAdmin();
    }
  }
}
