rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Public collections are readable by anyone.
    // Writing to them requires authentication.
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /subcategories/{subcategoryId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Users page: Admins (any authenticated user) can read anyone's profile.
    // Users can only update their own profile.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Orders and Settings are admin-only (any authenticated user).
    match /orders/{orderId} {
      allow read, write: if request.auth != null;
    }
    match /settings/{settingId} {
      allow read, write: if request.auth != null;
    }
  }
}
