rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ===== PUBLIC COLLECTIONS =====
    // Anyone can read these collections. Only authenticated users (admins) can write.
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /categories/{categoryId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /subcategories/{subcategoryId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // ===== ADMIN-ONLY & USER-SPECIFIC COLLECTIONS =====
    match /users/{userId} {
      // Admins (any authenticated user) can read and list all user profiles.
      allow read, list: if request.auth != null;
      
      // A user can only write to their own profile.
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /orders/{orderId} {
      // Only admins can manage orders.
      allow read, write: if request.auth != null;
    }

    match /settings/{settingId} {
      // Only admins can manage settings.
      allow read, write: if request.auth != null;
    }
  }
}
