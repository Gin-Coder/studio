rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Public read access for store content
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /subcategories/{subcategoryId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Admin-only access for users, orders, and settings
    match /users/{userId} {
      // Allow authenticated users to read and list the users collection
      allow read: if request.auth != null;
      // Only the user themselves can create or update their own profile
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /orders/{orderId} {
      allow read, write: if request.auth != null;
    }

    match /settings/{settingId} {
      allow read, write: if request.auth != null;
    }
  }
}
